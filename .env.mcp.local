# MCP Local Development Environment Configuration
# For host-based MCP connecting to Docker services

# Nomic Embeddings Service (host perspective)
EMBEDDING_SERVICE_HOST=localhost
EMBEDDING_SERVICE_PORT=48000

# Qdrant Vector Database (host perspective)  
QDRANT_HOST=localhost
QDRANT_HTTP_PORT=46333
QDRANT_GRPC_PORT=46334

# Neo4j Graph Database (host perspective)
NEO4J_URI=bolt://localhost:47687
NEO4J_USER=neo4j
NEO4J_PASSWORD=testpassword123

# Redis Cache (host perspective)
REDIS_CACHE_HOST=localhost
REDIS_CACHE_PORT=46379

# Redis Queue (host perspective)
REDIS_QUEUE_HOST=localhost
REDIS_QUEUE_PORT=46380

# Embedding Configuration
EMBED_DIM=768
EMBEDDING_MODEL=nomic-v2

# Feature Flags
STRUCTURE_EXTRACTION_ENABLED=true
QDRANT_CACHE_ENABLED=true
HYBRID_SEARCH_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_BASE_URL=true

# Project Settings
PROJECT_NAME=default