# Production Environment Configuration Template
# Copy to .env.production and fill in actual values

# Redis Cache Configuration
REDIS_CACHE_HOST=redis-cache
REDIS_CACHE_PORT=6379
REDIS_CACHE_PASSWORD=<STRONG_PASSWORD_HERE>
REDIS_CACHE_MAX_MEMORY=2gb
REDIS_CACHE_TTL=1800

# Redis Queue Configuration  
REDIS_QUEUE_HOST=redis-queue
REDIS_QUEUE_PORT=6380
REDIS_QUEUE_PASSWORD=<STRONG_PASSWORD_HERE>
REDIS_QUEUE_MAX_MEMORY=1gb

# Neo4j Configuration
NEO4J_HOST=neo4j
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=<STRONG_PASSWORD_HERE>

# Qdrant Configuration
QDRANT_HOST=qdrant
QDRANT_HTTP_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_API_KEY=<STRONG_API_KEY_HERE>

# Nomic Embeddings Configuration
NOMIC_HOST=embeddings
NOMIC_PORT=8000
EMBED_DIM=768

# Monitoring Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=<STRONG_PASSWORD_HERE>

# Cache Performance Tuning
CACHE_METRICS_SHORT_WINDOW=300
CACHE_METRICS_LONG_WINDOW=3600
CACHE_METRICS_INTERVAL=60
CACHE_WARMING_ENABLED=true
CACHE_WARMING_INTERVAL=900
CACHE_AUTO_WARM_LIMIT=100

# Service-specific Cache TTLs
NEO4J_CACHE_TTL=1800
NEO4J_SEMANTIC_CACHE_TTL=3600
QDRANT_CACHE_TTL=1800
QDRANT_SEARCH_CACHE_TTL=900
QDRANT_COLLECTION_CACHE_TTL=3600
EMBEDDINGS_CACHE_TTL=7200

# Performance Settings
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
CONNECTION_POOL_SIZE=20

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_OUTPUT=/var/log/neural-tools

# Feature Flags
INTELLIGENT_CACHING_ENABLED=true
CACHE_WARMING_ENABLED=true
METRICS_COLLECTION_ENABLED=true
PERFORMANCE_MONITORING_ENABLED=true